{% extends 'base.html.twig' %}
{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-xs-12">
                <h1>New question</h1>
                {{ form_start(questionForm) }}
                    {{ form_row(questionForm.content) }}

                    <h2>Possible answers</h2>
                    <h3>New Possible Answer</h3>
                    {{ form_start(possibleAnswerForm) }}
                    {{ form_row(possibleAnswerForm.answer) }}
                    <button type="submit" class="btn btn-primary">Save</button>
                    {{ form_end(possibleAnswerForm) }}
                    <ul class="answers">
                        {% for answer in questionForm.possibleAnswers %}
                            <li>{{ form_row(answer) }}</li>
                        {% endfor %}
                    </ul>
                <button type="submit" class="btn btn-primary">Save</button>
                {{ form_end(questionForm) }}
            </div>
        </div>
    </div>
{% endblock %}